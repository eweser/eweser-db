{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "e2e/example"
  ],
  "scripts": {
    "release": "lerna run clean && lerna run build --scope=@eweser/db && lerna run build --scope=@eweser/hooks && lerna publish --force-publish=* --no-private",
    "test": "lerna run test",
    "test:e2e": "cypress run",
    "clean": "lerna run clean",
    "build": "lerna run build --include-dependencies",
    "dev": "lerna run dev",
    "dev-e2e": "cypress open",
    "ci-build": "npm install lerna && lerna bootstrap && npm run build",
    "start-test-server": "cd test-server; docker-compose up -d",
    "install-lerna": "npm install --no-package-lock",
    "postinstall": "npx lerna bootstrap"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/events": "^3.0.0",
    "@types/react": "^18.0.32",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitejs/plugin-react": "^3.1.0",
    "cypress": "^12.9.0",
    "eslint": "^8.37.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^21.1.1",
    "prettier": "^2.8.7",
    "sass": "^1.60.0",
    "typescript": "^5.0.3",
    "vite": "^4.2.1",
    "vite-plugin-pwa": "^0.14.7",
    "vite-tsconfig-paths": "^4.0.7",
    "vitest": "^0.29.8"
  }
}
