{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "e2e/example"
  ],
  "scripts": {
    "release": "lerna run clean && lerna run build --scope=@eweser/db && lerna run build && lerna publish --force-publish=* --no-private",
    "test": "lerna run test",
    "test:e2e": "cypress run",
    "clean": "lerna run clean",
    "build": "lerna run build --include-dependencies",
    "dev": "lerna run dev",
    "dev-e2e": "cypress open",
    "ci-build": "npm install lerna && lerna bootstrap && npm run build",
    "start-test-server": "cd test-server; docker-compose up -d",
    "install-lerna": "npm install --no-package-lock",
    "postinstall": "npx lerna bootstrap",
    "run-example-previews": "run-p run-example-preview:*",
    "run-example-preview:basic": "cd packages/example-basic; npm run preview",
    "run-example-preview:editor": "cd packages/example-editor; npm run preview"
  },
  "devDependencies": {
    "cypress": "^12.9.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.3"
  }
}
