{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "e2e/example"
  ],
  "scripts": {
    "release": "lerna run clean && lerna run build --scope=@eweser/db && lerna run build --scope=@eweser/hooks && lerna publish --force-publish=* --no-private",
    "test": "lerna run test",
    "test:e2e": "cypress run",
    "clean": "lerna run clean",
    "build": "lerna run build --include-dependencies",
    "dev": "lerna run dev",
    "dev-e2e": "cypress open",
    "ci-build": "npm install lerna && lerna bootstrap && npm run build",
    "start-test-server": "cd test-server; docker-compose up -d",
    "install-lerna": "npm install --no-package-lock",
    "postinstall": "npm run bootstrap"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/events": "^3.0.0",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitejs/plugin-react": "^2.1.0",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.6",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^20.0.0",
    "prettier": "^2.7.1",
    "sass": "^1.54.8",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-plugin-pwa": "^0.12.6",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.23.1"
  }
}
