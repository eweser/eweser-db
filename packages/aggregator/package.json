{
  "name": "@eweser/aggregator",
  "version": "1.0.0",
  "type": "module",
  "description": "Listens to changes in eweser database rooms marked as public, and serves changes over an API",
  "main": "./dist/main.js",
  "scripts": {
    "build": "rm -rf ./dist; tsc -p tsconfig.build.json",
    "start": "tsc -p tsconfig.build.json; node ./dist/main.js",
    "start-dev-mongo": "docker compose -f ./docker-compose-mongo.yml up",
    "dev": "ts-node-dev ./src/main.ts",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eweser/eweser-db.git"
  },
  "keywords": [
    "user-owned",
    "crdt",
    "matrix",
    "local-first"
  ],
  "author": "jacobcoro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eweser/eweser-db/issues"
  },
  "homepage": "https://github.com/eweser/eweser-db#readme",
  "devDependencies": {
    "@types/express": "^4.17.18",
    "@types/node": "^20.8.2",
    "@types/supertest": "^2.0.14",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@eweser/db": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongodb": "^6.1.0"
  }
}
